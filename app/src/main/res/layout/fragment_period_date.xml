<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.PeriodDateFragment">

    <TextView
        android:id="@+id/text_arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@drawable/ic_keyboard_arrow_up_green_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_content" />

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/text_date_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/text_date_from" />

        <Button
            android:id="@+id/button_from"
            android:layout_width="@dimen/button_circle_size"
            android:layout_height="@dimen/button_circle_size"
            android:layout_weight="0"
            android:background="@drawable/circle"
            android:text="+"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/text_date_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/text_date_to" />

        <Button
            android:id="@+id/button_to"
            android:layout_width="@dimen/button_circle_size"
            android:layout_height="@dimen/button_circle_size"
            android:layout_weight="0"
            android:background="@drawable/circle"
            android:text="+"
            android:textColor="@android:color/white" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>