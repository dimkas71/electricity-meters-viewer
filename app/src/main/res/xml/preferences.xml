<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:key="pref_search_variant"
        android:title="@string/pref_search_variant"
        android:summary="@string/pref_search_variant_summary"
        android:dialogTitle="@string/pref_search_variant"
        android:entries="@array/search_variant_titles"
        android:entryValues="@array/search_variant_titles"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:defaultValue="1"/>


    <compsevice.ua.app.activity.DatePickerPreference
        android:key="perf_begin_date"
        android:title="@string/pref_begin_date_title"
        android:summary="@string/pref_begin_date_summary"
        android:defaultValue="01/01/2018"/>

    <PreferenceCategory
        android:key="pref_connection"
        android:title="@string/pref_connection_title"
        android:icon="@android:drawable/ic_menu_view"
        >

        <EditTextPreference
            android:key="pref_url"
            android:title="@string/pref_url_title"
            android:summary="@string/pref_url_summary"/>
        <EditTextPreference
            android:key="pref_user"
            android:title="@string/pref_user_title"
            android:summary="@string/pref_user_summary"/>

        <EditTextPreference
            android:key="pref_password"
            android:title="@string/pref_password_title"
            android:password="true"/>

    </PreferenceCategory>


</PreferenceScreen>